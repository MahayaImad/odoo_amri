<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!-- ============================================ -->
        <!-- GROUPES DE COMPTES ALGÉRIENS              -->
        <!-- ============================================ -->

        <record id="account_group_class1" model="account.group">
            <field name="name">Classe 1 - Comptes de capitaux</field>
            <field name="code_prefix_start">10</field>
            <field name="code_prefix_end">19</field>
        </record>

        <record id="account_group_class2" model="account.group">
            <field name="name">Classe 2 - Comptes d'immobilisations</field>
            <field name="code_prefix_start">20</field>
            <field name="code_prefix_end">29</field>
        </record>

        <record id="account_group_class3" model="account.group">
            <field name="name">Classe 3 - Comptes de stocks et en-cours</field>
            <field name="code_prefix_start">30</field>
            <field name="code_prefix_end">39</field>
        </record>

        <record id="account_group_class4" model="account.group">
            <field name="name">Classe 4 - Comptes de tiers</field>
            <field name="code_prefix_start">40</field>
            <field name="code_prefix_end">49</field>
        </record>

        <record id="account_group_class5" model="account.group">
            <field name="name">Classe 5 - Comptes financiers</field>
            <field name="code_prefix_start">50</field>
            <field name="code_prefix_end">59</field>
        </record>

        <record id="account_group_class6" model="account.group">
            <field name="name">Classe 6 - Comptes de charges</field>
            <field name="code_prefix_start">60</field>
            <field name="code_prefix_end">69</field>
        </record>

        <record id="account_group_class7" model="account.group">
            <field name="name">Classe 7 - Comptes de produits</field>
            <field name="code_prefix_start">70</field>
            <field name="code_prefix_end">79</field>
        </record>

        <!-- ============================================ -->
        <!-- TAGS COMPTABLES SPÉCIFIQUES ALGÉRIE       -->
        <!-- ============================================ -->

        <record id="account_dz_tag_salaires" model="account.account.tag">
            <field name="name">Salaires</field>
            <field name="applicability">accounts</field>
            <field name="country_id" ref="base.dz"/>
        </record>

        <record id="account_dz_tag_charges_sociales" model="account.account.tag">
            <field name="name">Charges Sociales</field>
            <field name="applicability">accounts</field>
            <field name="country_id" ref="base.dz"/>
        </record>

        <record id="account_dz_tag_immobilisations" model="account.account.tag">
            <field name="name">Immobilisations</field>
            <field name="applicability">accounts</field>
            <field name="country_id" ref="base.dz"/>
        </record>

        <record id="account_dz_tag_stocks" model="account.account.tag">
            <field name="name">Stocks</field>
            <field name="applicability">accounts</field>
            <field name="country_id" ref="base.dz"/>
        </record>

        <record id="account_dz_tag_tva" model="account.account.tag">
            <field name="name">TVA Algérienne</field>
            <field name="applicability">taxes</field>
            <field name="country_id" ref="base.dz"/>
        </record>

    </data>
</odoo>