<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vue liste des codes d'activité -->
    <record id="activity_code_tree_view" model="ir.ui.view">
        <field name="name">activity.code.tree</field>
        <field name="model">activity.code</field>
        <field name="arch" type="xml">
            <tree string="Codes d'activité">
                <field name="code"/>
                <field name="name"/>
                <field name="regulation"/>
                <field name="is_principal"/>
                <field name="company_id"/>
            </tree>
        </field>
    </record>

    <!-- Vue formulaire des codes d'activité -->
    <record id="activity_code_form_view" model="ir.ui.view">
        <field name="name">activity.code.form</field>
        <field name="model">activity.code</field>
        <field name="arch" type="xml">
            <form string="Code d'activité">
                <sheet>
                    <group>
                        <group>
                            <field name="code" required="1"/>
                            <field name="name" required="1"/>
                            <field name="company_id"/>
                        </group>
                        <group>
                            <field name="regulation"/>
                            <field name="is_principal"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vue recherche des codes d'activité -->
    <record id="activity_code_search_view" model="ir.ui.view">
        <field name="name">activity.code.search</field>
        <field name="model">activity.code</field>
        <field name="arch" type="xml">
            <search string="Rechercher codes d'activité">
                <field name="name" string="Nom" filter_domain="['|', ('name', 'ilike', self), ('code', 'ilike', self)]"/>
                <field name="code"/>
                <field name="regulation"/>
                <separator/>
                <filter string="Code principal" name="principal" domain="[('is_principal', '=', True)]"/>
                <filter string="Activité réglementée" name="regulated" domain="[('regulation', '=', 'regulated_activity')]"/>
                <group expand="0" string="Grouper par">
                    <filter string="Réglementation" name="group_regulation" context="{'group_by': 'regulation'}"/>
                    <filter string="Société" name="group_company" context="{'group_by': 'company_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action pour les codes d'activité -->
    <record id="activity_code_action" model="ir.actions.act_window">
        <field name="name">Codes d'activité</field>
        <field name="res_model">activity.code</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="activity_code_search_view"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Créer un nouveau code d'activité
            </p>
            <p>
                Les codes d'activité permettent de classifier les activités
                de l'entreprise selon la nomenclature algérienne.
            </p>
        </field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_activity_code"
              name="Codes d'activité"
              parent="account.account_account_menu"
              action="activity_code_action"
              sequence="15"
              groups="account.group_account_manager"/>
</odoo>