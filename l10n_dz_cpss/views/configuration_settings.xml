<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_inherit_cpss" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.cpss</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <!-- Option 1: Cibler un bloc spécifique par son titre -->
            <xpath expr="//app[@name='account']" position="inside">
                <block title="Configuration CPSS" name="cpss_configuration_block">
                    <setting string="Secteur d'activité sur factures"
                             help="Afficher le secteur d'activité sur les factures">
                        <field name="industry_id_in_invoice"/>
                    </setting>

                    <setting string="Code d'activité sur factures"
                             help="Afficher le code d'activité sur les factures">
                        <field name="activity_code_in_invoice"/>
                    </setting>

                    <setting string="Secteur d'activité sur devis"
                             help="Afficher le secteur d'activité sur les devis">
                        <field name="industry_id_in_quotation"/>
                    </setting>

                    <setting string="Code d'activité sur devis"
                             help="Afficher le code d'activité sur les devis">
                        <field name="activity_code_in_quotation"/>
                    </setting>

                    <setting string="Journal de transfert des taxes"
                             help="Journal utilisé pour le transfert des taxes">
                        <field name="transfer_tax_journal"/>
                    </setting>

                    <setting string="Compte temporaire des taxes"
                             help="Compte temporaire pour les taxes">
                        <field name="temporary_tax_account"/>
                    </setting>

                    <setting string="Base de calcul fiscal"
                             help="Base de calcul pour les déclarations fiscales">
                        <field name="based_on"/>
                    </setting>
                </block>
            </xpath>
        </field>
    </record>
</odoo>