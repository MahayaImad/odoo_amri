<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_inherit_cpss" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.cpss</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('col-12', 'col-lg-6', 'o_setting_box')]//div[@id='fiscal_country']" position="after">
                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name="industry_id_in_invoice"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="industry_id_in_invoice"/>
                        <div class="text-muted">
                            Afficher le secteur d'activité sur les factures
                        </div>
                    </div>
                </div>

                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name="activity_code_in_invoice"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="activity_code_in_invoice"/>
                        <div class="text-muted">
                            Afficher le code d'activité sur les factures
                        </div>
                    </div>
                </div>

                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name="industry_id_in_quotation"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="industry_id_in_quotation"/>
                        <div class="text-muted">
                            Afficher le secteur d'activité sur les devis
                        </div>
                    </div>
                </div>

                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name="activity_code_in_quotation"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="activity_code_in_quotation"/>
                        <div class="text-muted">
                            Afficher le code d'activité sur les devis
                        </div>
                    </div>
                </div>

                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name="transfer_tax_journal"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="transfer_tax_journal"/>
                        <div class="text-muted">
                            Journal utilisé pour le transfert des taxes
                        </div>
                    </div>
                </div>

                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name="temporary_tax_account"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="temporary_tax_account"/>
                        <div class="text-muted">
                            Compte temporaire pour les taxes
                        </div>
                    </div>
                </div>

                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name="based_on"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="based_on"/>
                        <div class="text-muted">
                            Base de calcul pour les déclarations fiscales
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>