<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vue liste des formes juridiques -->
    <record id="forme_juridique_list_view" model="ir.ui.view">
        <field name="name">forme.juridique.list</field>
        <field name="model">forme.juridique</field>
        <field name="arch" type="xml">
            <list string="Formes juridiques">
                <field name="code"/>
                <field name="name"/>
                <field name="company_id"/>
            </list>
        </field>
    </record>

    <!-- Vue formulaire des formes juridiques -->
    <record id="forme_juridique_form_view" model="ir.ui.view">
        <field name="name">forme.juridique.form</field>
        <field name="model">forme.juridique</field>
        <field name="arch" type="xml">
            <form string="Forme juridique">
                <sheet>
                    <group>
                        <group>
                            <field name="name" required="1"/>
                            <field name="code"/>
                        </group>
                        <group>
                            <field name="company_id"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vue recherche des formes juridiques -->
    <record id="forme_juridique_search_view" model="ir.ui.view">
        <field name="name">forme.juridique.search</field>
        <field name="model">forme.juridique</field>
        <field name="arch" type="xml">
            <search string="Rechercher formes juridiques">
                <field name="name" string="Nom" filter_domain="['|', ('name', 'ilike', self), ('code', 'ilike', self)]"/>
                <field name="code"/>
                <group expand="0" string="Grouper par">
                    <filter string="Société" name="group_company" context="{'group_by': 'company_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action pour les formes juridiques -->
    <record id="forme_juridique_action" model="ir.actions.act_window">
        <field name="name">Formes juridiques</field>
        <field name="res_model">forme.juridique</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="forme_juridique_search_view"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Créer une nouvelle forme juridique
            </p>
            <p>
                Les formes juridiques permettent de définir le statut
                légal des entreprises selon la législation algérienne.
            </p>
        </field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_forme_juridique"
              name="Formes juridiques"
              parent="account.account_account_menu"
              action="forme_juridique_action"
              sequence="16"
              groups="account.group_account_manager"/>
</odoo>